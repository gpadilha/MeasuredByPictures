<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.momogui.measuredbypictures.ResultActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_result_deer"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">

    <TextView
        android:text="@string/target_height_is"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/target_height"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100 cm"
        android:textSize="56dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:src="@drawable/img_result_ruler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="224dp"/>

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@null"
        android:padding="20dp"
        android:src="@mipmap/ic_home_button"/>


</LinearLayout>
